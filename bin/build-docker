#!/usr/bin/env bash

printf "\e[1;34m==>\e[1;37m DOCKER \e[0m \n"

bin/stop

printf "\e[1;33m==>\e[1;37m DOCKER \e[1;33m build default \e[1;32m START \e[0m \n"
S_TIME=$SECONDS

docker-compose -f docker-compose.yml build

E_TIME=$(($SECONDS - $S_TIME))
printf "\e[1;33m==>\e[1;37m DOCKER \e[1;33m build default \e[1;32m DONE \e[0m %02d:%02d\n" $(($E_TIME/60)) $(($E_TIME%60))

bin/start
